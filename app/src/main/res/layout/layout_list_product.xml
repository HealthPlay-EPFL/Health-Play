<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/productListLayout"
    android:clickable="true"
    android:focusable="true"
    >

    <LinearLayout
        android:background="?android:selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/productListImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_vertical"
            android:contentDescription="Image of the product"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/productListDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_02_01_1990_06_19pm"
                android:layout_gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/productListName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:paddingHorizontal="5dp"
                android:textAlignment="center"/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>