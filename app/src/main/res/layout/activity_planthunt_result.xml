<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".planthunt.PlanthuntResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/leaves_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/waitLobbyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="Lobby 1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="72sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/planthuntLightGreen"
                android:fontFamily="@font/alata"
                android:text="Scores"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="60sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/planthuntDarkGreen" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/planthuntLightGreen"
                android:fontFamily="@font/alata"
                android:text="Baptiste\n37 points"
                android:drawableEnd="@drawable/crown_icon"
                android:drawableTint="@color/white"
                android:paddingEnd="40dp"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/planthuntDarkGreen" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/planthuntLightGreen"
                android:fontFamily="@font/alata"
                android:text="Antoine\n32 points"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/planthuntDarkGreen" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/planthuntLightGreen"
                android:fontFamily="@font/alata"
                android:text="Etienne\n27 points"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/planthuntDarkGreen" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/planthuntCreateLobbyButton"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/planthuntLightGreen"
            android:fontFamily="@font/alata"
            android:text="Leave"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>